{% extends "MaxJobeetBundle::layout.html.twig" %}

{% block content %}
    
    {% for category in categories %}
        <h1><a href="{{ path('max_category', { 'slug': category.slug }) }}">{{ category.name }}</a></h1>
        <div class="feed">
            <a href="#">Feed</a>
        </div>
        <table class="table table-striped">
            <tbody>
            {% for entity in category.activejobs %}

                <tr>
                    <td><strong>{{ entity.location }}</strong></td>
                    <td class="position">
                        <a href="{{ path('max_job_show', { 'id': entity.id, 'company': entity.companyslug, 'location': entity.locationslug, 'position': entity.positionslug }) }}">
                            {{ entity.position }}
                        </a>
                    </td>
                    <td class="company">{{ entity.company }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {% if category.morejobs %}
            <div class="more_jobs">
                and <a href="{{ path('max_category', { 'slug': category.slug }) }}">{{ category.morejobs }}</a>
                more...
            </div>
        {% endif %}

    {% endfor %}

{% endblock %}