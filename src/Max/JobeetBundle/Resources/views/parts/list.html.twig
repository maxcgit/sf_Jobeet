    <table class="table table-striped">
    	<tbody>
        {% for entity in items %}
            <tr>
                <td class="location">{{ entity.location }}</td>
                <td class="position">
                    <a href="{{ path('max_job_show', { 'id': entity.id, 'company': entity.companyslug, 'location': entity.locationslug, 'position': entity.positionslug }) }}">{{ entity.position }}</a>
                </td>
                <td class="company">{{ entity.company }}</td>
            </tr>
        {% endfor %}
        <tbody>
    </table>