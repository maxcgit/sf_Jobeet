{% extends "MaxJobeetBundle::layout.html.twig" %}
 
{% block title %}
    Jobs in the {{ category.name }} category
{% endblock %}
 
{% block content %}
    <div class="category">
        <div class="feed">
            <a href="">Feed</a>
        </div>
        <h1>{{ category.name }}</h1>
    </div>
 
    <table class="table table-striped">
    	<tbody>
        {% for entity in category.activejobs %}
            <tr>
                <td class="location">{{ entity.location }}</td>
                <td class="position">
                    <a href="{{ path('max_job_show', { 'id': entity.id, 'company': entity.companyslug, 'location': entity.locationslug, 'position': entity.positionslug }) }}">
                        {{ entity.position }}
                    </a>
                </td>
                <td class="company">{{ entity.company }}</td>
            </tr>
        {% endfor %}
        <tbody>
    </table>
{% endblock %}